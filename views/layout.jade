doctype html
html
	head(lang="en")
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=Edge")

		title= title
		// For Mozilla Persona
		//script(src="https://login.persona.org/include.js")

		// Sets initial viewport load and disables zooming
		meta(name="viewport", content="initial-scale=1, maximum-scale=1, user-scalable=no")
		meta(name="apple-mobile-web-app-capable", content="yes")
		meta(name="apple-mobile-web-app-status-bar-style", content="black")
		
		link(href="/ratchet/css/ratchet.css", rel="stylesheet")

		// Stylesheets for iOS and Android depending on User Agent
		case mobileOS
			when "iOS"
				link(href="/ratchet/css/ratchet-theme-ios.min.css", rel="stylesheet")
			when "Android"
				link(href="/ratchet/css/ratchet-theme-android.min.css", rel="stylesheet")

		link(rel="stylesheet", href="/css/persona.css")
		link(rel="stylesheet", href="/css/wpp.css")
		//script(src="//code.jquery.com/jquery-1.11.0.min.js")
		script(src="/js/jquery-1.11.0.min.js")
		script(src="/ratchet/js/ratchet.js")
		script(src="/js/wpp.js")
	body
		include modals/settings
		include modals/login
		block header
			header.bar.bar-nav
				if !loggedIn
					a.btn.btn-primary.pull-left(href="#login") Login
				a.icon.icon-gear.pull-right(href="#settings")
				h1.title= title
			footer
				nav.bar.bar-tab
					mixin tab(name, url, iconClass, active)
						if active
							a.tab-item.active(href=url)
								span.icon(class=iconClass)
								span.tab-label= name
						else
							a.tab-item(href=url)
								span.icon(class=iconClass)
								span.tab-label= name
					block tabs
