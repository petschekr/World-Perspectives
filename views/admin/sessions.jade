extends ../layout

block header
	header.bar.bar-nav
		a.btn.btn-link.btn-nav.pull-left(href="/admin", data-transition="slide-out")
			span.icon.icon-left-nav
			| Back
		h1.title= title

block content
	br
	a.btn.btn-primary.btn-block(href="#create") Create a Presentation
	br
	if presentations.length > 0
		ul.table-view.explore
			for presentation in presentations
				li.table-view-cell.media
					a.push-right
						img.media-object.pull-left(src='http://placehold.it/42x42')
