extends ../layout

block header
	header.bar.bar-nav
		a.btn.btn-link.btn-nav.pull-left(href="/admin", data-transition="slide-out")
			span.icon.icon-left-nav
			| Back
		h1.title= title

block content
	ul.table-view
		li.table-view-cell
			a.schedule-name.navigate-right(data-ignore="push", href="/admin/schedule/grade/9", target="_blank") 9th Grade
		li.table-view-cell
			a.schedule-name.navigate-right(data-ignore="push", href="/admin/schedule/grade/10", target="_blank") 10th Grade
		li.table-view-cell
			a.schedule-name.navigate-right(data-ignore="push", href="/admin/schedule/grade/11", target="_blank") 11th Grade
		li.table-view-cell
			a.schedule-name.navigate-right(data-ignore="push", href="/admin/schedule/grade/12", target="_blank") 12th Grade
		li.table-view-cell
			a.schedule-name.navigate-right(data-ignore="push", href="/admin/schedule/grade/faculty", target="_blank") Faculty

	input#name-search(type="text", placeholder="Search for name", style="margin-top: 0;")

	ul.table-view
		for name, index in names
			li.table-view-cell
				a.schedule-name.navigate-right(data-ignore="push", href="/admin/schedule/#{name.username}", target="_blank")= name.name

block footer
	br